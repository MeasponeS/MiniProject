.topic-directory {
    padding: 10rpx 18rpx;
    background: #F3F5F7;
    position: fixed;
    width: 100%;
    left: 0;
    top: 0;
    z-index: 8;
    overflow-y: auto;
    height: calc(100vh - 116rpx);
}
.topic-directory-top{
    width: 100%;
    height: 105rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.topic-directory-top .jump{
    font-size: 30rpx;
    color: #222;
}
.topic-directory-top .close{
    font-size: 52rpx;
    color: #222;
}
.topic-directory-content{
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
}
.topic-directory-content .block{
    display: flex;
    align-items: center;
    padding: 20rpx;
    justify-content: flex-start;
    width:223rpx;
    margin-right: 24rpx;
    height:88rpx;
    border-radius: 5rpx;
    background: #fff;
    margin-bottom: 20rpx;
    font-size: 28rpx;
    color: #333333;
}
.topic-directory-content .active{
    color: #4D86F8;
}

.topic-directory-content .block:nth-child(3n){
    margin-right: 0;
}

