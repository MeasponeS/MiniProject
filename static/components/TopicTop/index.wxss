.topic-top{
    width: 100%;
    height: 105rpx;
    display: flex;
    align-items: center;
    font-size: 30rpx;
    color: #222222;
}
.topic-top .topic-title{
    flex: 1;
    display: flex;
    align-items: center;
}
.topic-top .topic-title .topic-type{
    color:#4D86F8;
    margin-left: 12rpx;
}

.topic-top .btn-group{
    display: flex;
    align-items: center;
}

.topic-top .btn-group .topic-btn{
    width:48rpx;
    height:48rpx;
    border:1rpx solid #969FA9;
    border-radius:3rpx;
    display: flex;
    margin-left: 8rpx;
    align-items: center;
    color:#969FA9;
    font-size: 20rpx;
    border-radius: 4rpx;
    justify-content: center;
}
.topic-top .btn-group .do{
    color: #2B60FF;
    border-color: #2B60FF;
}
